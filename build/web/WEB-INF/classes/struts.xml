<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default" namespace="/">
        <action name="">
            <result>
                login.html
            </result>
        </action>
        <action name="try">
            <result>
                login.html
            </result>
        </action>
        <action name="login" class="training.struts2.LoginAction">
            <result name="admin" type="redirectAction">
                load
            </result>
            <result name="student" type="redirectAction">
                shopping
            </result>
            <result name="fail" >
                invalidLogin.html
            </result>
        </action>
        <action name="load" class="training.struts2.LoadAction">
            <result name="success" type="redirectAction">
                search
            </result>
        </action>
        <action name="search" class="training.struts2.SearchAction">
            <result name="success" >
                dashboard.jsp
            </result>
            <result name="fail" >
                invalidLogin.html
            </result>
            <result name="unAuthen">
                login.html
            </result>
        </action>
        <action name="filter" class="training.struts2.FilterAction">
            <result name="success" type="redirectAction">
                <param name="actionName" >search</param>
                <param name="searchValue">${lastSearchValue}</param>
                <param name="isFilter">${isFilter}</param>
            </result>
        </action>
        <action name="delete" class="training.struts2.DeleteAction">
            <result name="success" type="redirectAction">
                <param name="actionName" >search</param>
                <param name="searchValue">${lastSearchValue}</param>
                <param name="message">${message}</param>
            </result>
        </action>
        <action name="update" class="training.struts2.UpdateAction">
            <result name="success" type="redirectAction">
                <param name="actionName" >search</param>
                <param name="searchValue">${lastSearchvalue}</param>
            </result>
            <result name="fail" >
                invalidLogin.html
            </result>
            <result name="unAuthen" >
                invalidLogin.html
            </result>
        </action>
        <action name="shopping" class="training.struts2.ShoppingAction">
            <result name="success" >
                shoppingPage.jsp
            </result> 
            <result name="unAuthen">
                login.html
            </result>         
        </action>
        <action name="addItemsToCart" class="training.struts2.AddItemsToCartAction">
            <result name="success" type="redirectAction" >
                shopping
            </result>          
        </action>
        <action name="viewCart" class="training.struts2.ViewCartAction">
            <result name="success">
                viewCart.jsp
            </result>  
            <result name="unAuthen">
                login.html
            </result>           
        </action>
        <action name="signOut" class="training.struts2.SignOutAction">
            <result name="success">
                login.html
            </result>  
        </action>
    </package>
</struts>
